extends components/basic
block web-development
    body.technologies.technologies_basic
      include components/header
      .overlay
      .wrap
        .container-fluid.breadcrumbs
          .container
            .row
              .col-xs-12
                a(href="/") #{page.service.root}
                a(href="javascript:void(0)")
                  span
                    svg(height="18px" viewBox="0 0 10 18" width="10px" xmlns:xlink="http://www.w3.org/1999/xlink")
                      use(x="0" xlink:href="#arrow_btn" y="0")
                  | #{subNav.web}
        .container
          .row.content_wrap
            .col-md-8
              h1 #{subNav.web}
              .block.general_info
                .image_wrap
                  img.icon_bg(alt="" src="/images/svg/icon_bg.svg")
                  img(alt="" src="/images/svg/technology/web_development.svg")
                p #{page.service.webDevDescription}
              .block
                ol.list
                  li
                    p #{page.service.webDevFeatureOne}
                  li
                    p #{page.service.webDevFeatureTwo}
                  li
                    p #{page.service.webDevFeatureThree}
            .col-md-4
              include components/fixedInfo
        .container-fluid.block.technologies_links-wrap
          .container
            h2 #{page.service.techStack}
          .block_gray
            .container.technologies_links
              a(href='/web/backbone.html')
                img(alt='' src='/images/svg/technology/web_development/backbone.svg')
                | #{thirdNav.web.backbone}
              a(href='/web/angular.html')
                img(alt='' src='/images/svg/technology/web_development/angular.svg')
                | #{thirdNav.web.angular}
              a(href='/web/react.html')
                img(alt='' src='/images/svg/technology/web_development/react.svg')
                | #{thirdNav.web.react}
              a(href='/web/nodejs.html')
                img(alt='' src='/images/svg/technology/web_development/nodejs-icon.svg')
                | #{thirdNav.web.node}
              a(href='/web/wordpress.html')
                img(alt='' src='/images/svg/technology/web_development/wordpress-icon.svg')
                | #{thirdNav.web.wordpress}
              a(href='/web/joomla.html')
                img(alt='' src='/images/svg/technology/web_development/joomla.svg')
                | #{thirdNav.web.joomla}
              a(href='/web/drupal.html')
                img(alt='' src='/images/svg/technology/web_development/drupal.svg')
                | #{thirdNav.web.drupal}
              a(href='/web/ai.html')
                img(alt='' src='/images/svg/technology/web_development/ai.svg')
                | #{thirdNav.web.ai}
              a(href='/web/api.html')
                img(alt='' src='/images/svg/technology/web_development/api.svg')
                | #{thirdNav.web.api}
              a(href='/web/d3.html')
                img(alt='' src='/images/svg/technology/web_development/d3.svg')
                | #{thirdNav.web.d3}
              a(href='/web/mongodb.html')
                img(alt='' src='/images/svg/technology/web_development/mongo_db.svg')
                | #{thirdNav.web.mongo}
              a(href='/web/postgresql.html')
                img(alt='' src='/images/svg/technology/web_development/postgre_sql.svg')
                | #{thirdNav.web.postgre}
        .container.block
          h2 #{page.service.otherServices}
          .row.other_services
            .col-sm-4.col-xs-12
              .other_service
                img(alt="" src="/images/svg/technology/mobile_development.svg")
                h3 #{subNav.mobile}
                p.small #{page.service.mobileDevIntro}
                a.button.button-outline-blue.arrow_right(href="/mobile-development.html") #{page.index.more}
            .col-sm-4.col-xs-12
              .other_service
                img(alt="" src="/images/svg/technology/product_design.svg")
                h3 #{subNav.design}
                p.small #{page.service.productDesignIntro}
                a.button.button-outline-blue.arrow_right(href="/product-design.html") #{page.index.more}
      include components/footer
